{
  "env": {
    "node": true,
    "es2021": true,
    "mocha": true
  },
  "extends": ["prettier", "eslint:recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-console": "warn",
    "no-underscore-dangle": "off",
    "prettier/prettier": "error"
  }
}
